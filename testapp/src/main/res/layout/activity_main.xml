<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Api Key (mandatory)"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/et_search_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search term"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/et_gallery_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gallery activity title"
        android:layout_margin="16dp"/>

    <CheckBox
        android:id="@+id/cb_show_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show back button"
        android:layout_margin="16dp"/>

    <CheckBox
        android:id="@+id/cb_expecting_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expect image uri result"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btn_start_image_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Pixabay search"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*All fields are optional, unless they are mark as mandatory"
        android:layout_margin="16dp"/>

</LinearLayout>